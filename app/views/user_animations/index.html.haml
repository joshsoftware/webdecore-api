%table.table.table-dark
  .col-md-8.offset-md-2
  %h1 My Orders
  %table.table.table-hover
    %tr
      %th Primary Category
      %th Secondary Category
      %th Animation Name
      %th Start Date
      %th End Date
      %th Location
      %th Animation Price/Day
      %th Amount
      %th.text-center{colspan: 3} Operations
    - @animations.each do |anim|
      %tr
        %td= anim.animation_data.category.primarycategory.category_name
        %td= anim.animation_data.category.category_name
        %td= anim.animation_data.animation_name
        %td= anim.start_date
        %td= anim.end_date
        %td= anim.location
        %td= anim.animation_data.animation_price
        %td= anim.amount
        %td= link_to '', user_animation_path(anim.id), method: "delete", :class => 'fas fa-trash-alt btn'
        %td= link_to '', edit_user_animation_path(anim.id), method: "get", :class => 'fas fa-edit btn'
        %td= link_to '', demo_path(anim.animation_data.category.primarycategory_id,
              anim.animation_data.category.id, anim.animation_data_id), method: "get", :class => 'fas fa-eye btn'