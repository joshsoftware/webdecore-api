.container-fluid
  .row
    .col-md-4.offset-md-4
      %h4 Please Fill form to update #{@edit_sub_category.category_name}
      = bootstrap_form_with scope: :category, method:"patch", url: edit_sub_category_path, local: true do |form|
        %h6 Primary Category :  #{@edit_sub_category.primarycategory.category_name}
        %p
          = form.text_field :category_name, value: @edit_sub_category.category_name, required: true
        %p
          = form.text_field :category_description, value: @edit_sub_category.category_description, required: true
          %label Your Previous picture
          %img.img-fluid{:alt => "hii", :src => "#{@edit_sub_category.picture.url}", :style => "height: 10%", id: "new_picture"}
        %p
          = form.file_field :picture, id: "picture", onchange: "picture_file(this)"
        %p
          = form.submit
:javascript
  function picture_file(element){
    var fileName = document.getElementById("picture").files[0].name;
    var nextSibling = element.nextElementSibling;
    nextSibling.innerText = fileName;
  }
