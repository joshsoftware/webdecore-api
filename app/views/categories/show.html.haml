- n = 0
- count = @categories.count
- outer = (count - 1) / 4 + 1
- outer.times do
  .card-deck.my-5
    - 4.times do
      - break if n >= count
      .card.col-md-3.mx-0{:style => "height: 35rem"}
        %img.img-fluid{:alt => "hii", :src => "#{@categories[n].picture.url}", :style => "height: 40%"}/
        .card-body
          %h5.card-title.text-center= @categories[n].category_name
          %p.card-text.text-muted.text-center= @categories[n].category_description
          = button_to 'Click Here', animations_path(@primary_category.id, @categories[n].id), method: "get", class: "btn btn-success"
      - n+=1
